@model Entities.Models.Owner

@{
    ViewData["Title"] = "Create";
}


<div class="container-fluid pt-5">
    <div class="row">
        <div class="col-sm-12 col-md-5 col-lg-4 offset-lg-2 offset-md-1 ">
            <h3>Set your account</h3>
            <p class="text-left">Visualize your sales advance in a click</p>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <p class="text-left">Hubspot Api Key</p>
                    <input asp-for="Token" class="form-control" required/>
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="text-left">Email</p>
                    <input asp-for="Email" class="form-control" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="text-left">Yearly sales goal</p>
                    <input asp-for="SalesGoal" class="form-control" required />
                    <span asp-validation-for="SalesGoal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Start" class="btn btn-danger btn-lg" />
                </div>
            </form>

        </div>
    </div>
</div>



@if (ViewBag.message!=null){
<script>alert('The email is not available');</script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
